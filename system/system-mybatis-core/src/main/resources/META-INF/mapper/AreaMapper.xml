<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="modules.system.dao.AreaDao">
    <sql id="columns">
        o.`CODE`,
        o.IS_DEL AS 'isDel',
        o.REMARKS,
        o.CREATED_TIME,
        o.UPDATED_TIME,
        o.VERSION,
        o.`NAME`,
        o.NUMBER,
        o.TYPE,
        o.CREATED_BY,
        o.UPDATED_BY,
        o.PCODES,
        o.PCODE AS 'parent.code'
    </sql>

    <sql id="joinColumns">
        ,p.NAME AS 'parent.name',
        p.NUMBER AS 'parent.roleType'
    </sql>

    <sql id="tableName">
        sys_area o
    </sql>

    <sql id="joinTables">
        LEFT JOIN sys_area p ON p.`CODE` = o.PCODE
    </sql>

    <sql id="conditions">
        1=1
        <if test="null != code and '' != code">
            AND o.CODE = #{code}
        </if>
        <if test="null != type and '' != type">
            AND o.TYPE = #{type}
        </if>
        <if test="null != parent and null != parent.code and '' != parent.code">
            AND o.PCODE = #{parent.code}
        </if>
    </sql>

    <select id="findAllChild" resultType="modules.system.model.Area">
        SELECT
        <include refid="columns"/>
        <include refid="joinColumns"/>
        FROM
        <include refid="tableName"/>
        <include refid="joinTables"/>
        WHERE 1 = 1 AND o.TYPE >= #{type} AND o.PCODE = #{parent.code}
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(o.CODE)
        FROM
        <include refid="tableName"/>
        WHERE
        <include refid="conditions"/>
    </select>

    <select id="findOne" resultType="modules.system.model.Area">
        SELECT
        <include refid="columns"/>
        <include refid="joinColumns"/>
        FROM
        <include refid="tableName"/>
        <include refid="joinTables"/>
        WHERE
        <include refid="conditions"/>
    </select>

    <select id="findAll" resultType="modules.system.model.Area">
        SELECT
        <include refid="columns"/>
        <include refid="joinColumns"/>
        FROM
        <include refid="tableName"/>
        <include refid="joinTables"/>
        WHERE
        <include refid="conditions"/>
    </select>

    <select id="findPage" resultType="modules.system.model.Area">
        SELECT
        <include refid="columns"/>
        <include refid="joinColumns"/>
        FROM
        <include refid="tableName"/>
        <include refid="joinTables"/>
        WHERE
        <include refid="conditions"/>
        <if test="null != index and null != size and 0 != size">
            LIMIT #{index},#{size}
        </if>
    </select>

    <insert id="insert">
        INSERT INTO sys_area(
        `CODE`,
        IS_DEL,
        REMARKS,
        CREATED_TIME,
        UPDATED_TIME,
        VERSION,
        `NAME`,
        `NUMBER`,
        `TYPE`,
        CREATED_BY,
        UPDATED_BY,
        PCODES,
        PCODE
        ) VALUES (
        #{code},
        #{isDel},
        #{remarks},
        #{createdTime},
        #{updatedTime},
        #{version},
        #{name},
        #{number},
        #{type},
        #{createdBy},
        #{updatedBy},
        #{pcodes},
        #{parent.code}
        )
    </insert>

    <update id="update">
        UPDATE
        sys_area
        SET
        IS_DEL = #{isDel},
        REMARKS = #{remarks},
        CREATED_TIME = #{createdTime},
        UPDATED_TIME = #{updatedTime},
        VERSION = #{version},
        `NAME` = #{name},
        `NUMBER` = #{number},
        `TYPE` = #{type},
        CREATED_BY = #{createdBy},
        UPDATED_BY = #{updatedBy},
        PCODES = #{pcodes},
        PCODE = #{parent.code},
        WHERE CODE = #{code}
    </update>

    <delete id="delete">
        DELETE FROM
        sys_area
        WHERE CODE = #{code}
    </delete>

    <!-- 批量删除 -->
    <delete id="deleteList" parameterType="java.util.List">
        DELETE FROM
        sys_area
        WHERE CODE in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item.code}
        </foreach>
    </delete>

    <delete id="deleteAll">
        DELETE FROM
        sys_area
    </delete>
</mapper>